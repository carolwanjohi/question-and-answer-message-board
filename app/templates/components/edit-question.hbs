{{#if editQuestionForm}}

    <h2 class="editQuestionHeader">Edit {{question.questionTitle}}</h2>

    <div class="editQuestion">

        <form class="editQuestion">

            <div class="form-group">
                <label for="authorQuestion">Enter your name or username</label>
                {{input class="form-control" value=authorQuestion id="authorQuestion" placeholder=question.authorQuestion}}
            </div>

            <div class="form-group">
                <label for="questionTitle">Enter the question</label>
                {{input class="form-control" value=questionTitle id="questionTitle" placeholder=question.questionTitle}}
            </div>

            <div class="form-group">
                <label for="contentQuestion">Enter details about the question</label>
                {{textarea rows="3" class="form-control" value=contentQuestion id="contentQuestion" placeholder=question.contentQuestion}}
            </div>

            <button class="btn btn-info" {{action 'edit' question}}>Submit</button>

        </form>

    </div>
{{else}}
    <button class="btn btn-info editQuestionButton" {{action 'showEditForm'}}>Edit Your Question</button>
{{/if}}